<p id="notice"><%= notice %></p>

<h1>Listing Stocks</h1>
<table>
  <thead>
    <tr>
      <th >Ticker</th>
      <th >Values</th>
    </tr>
  </thead>

  <tbody>
    <% @stocks_history[:values].each do |x| %>
      <tr>
        <td><%= x.first %></td>
        <td>
          Raw Price: <%= x.last[:raw_prices].map {|x| x.to_f.round(2)} %>
        </br>
          50 Days: <%= x.last[:avg_50_days].map {|x| x.to_f.round(2)} %>
        </br>
          20 Days: <%= x.last[:avg_20_days].map {|x| x.to_f.round(2)} %>
        </br>

        <%= line_chart({name: "Series A", data: [Time.now, 7]) } %>
        <%= line_chart [
{name: "Series A", data: chartkick_format(@stocks_history[:dates], x[:raw_prices] )} %>


        </td>
      </tr>
    <% end %>
  </tbody>
</table>
